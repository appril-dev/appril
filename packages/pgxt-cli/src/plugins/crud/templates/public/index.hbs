import routeFactory, {
  type ListPayload,
  type ListResponse,
  type CreatePayload,
  type CreateResponse,
} from "{{importPathmap.lib}}";

export default routeFactory(({ get, post }) => [
  get<never, { payload: ListPayload }, ListResponse>(async (ctx) => {
    ctx.body = await ctx.crud.worker();
  }),

  post<never, { payload: CreatePayload }, CreateResponse>(async (ctx) => {
    ctx.body = await ctx.crud.worker(ctx.payload);
  }),
]);
