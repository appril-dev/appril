import {
  type RecordT,
  type UpdateT,
  useWrapper,
  retrieveWrapper,
  updateWrapper,
  deleteWrapper,
} from ".";

export * from "./typeLiterals";

type ParamsT = { id: string }

export const use = useWrapper<ParamsT>()

export const get = retrieveWrapper<
  ParamsT,
  () => Promise<RecordT>
>()

export const patch = updateWrapper<
  ParamsT,
  (payload: UpdateT) => Promise<RecordT>
>()

export const del = deleteWrapper<
  ParamsT,
  () => Promise<RecordT>
>()
