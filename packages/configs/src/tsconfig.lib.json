{
  "extends": "./tsconfig.base.json",
  "include": ["${configDir}/src"],
  "compilerOptions": {
    "rootDir": "${configDir}/src",
    "outDir": "${configDir}/pkg",
    "paths": {
      "@/*": ["${configDir}/src/*"]
    },
    "moduleResolution": "bundler",
    "module": "ESNext",
    "declaration": true,
    "emitDeclarationOnly": true
  }
}
