{

  "extends": "@appril/configs/tsconfig.app.json",

  "include": [
    {{#if solidFramework}}
    "**/*.tsx",
    {{/if}}
    "**/*.ts"
  ],

  "exclude": [
    {{#each excludedSourceFolders}}
    {{this}}
    {{/each}}
  ],

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [ "./*" ],
      {{#each aliases}}
      {{this}}
      {{/each}}
    },
    "types": [
      "node"
    ]
  }
}
