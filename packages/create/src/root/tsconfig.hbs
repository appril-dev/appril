{
  "compilerOptions": {
    "paths": {
      {{#each srcFolders}}
      "{{this}}/*": ["./{{this}}/*", "./{{../defaults.varDir}}/{{this}}/*"],
      {{/each}}
      "{{defaults.corePrefix}}/*": ["./{{defaults.coreDir}}/*"],
      "{{defaults.basePrefix}}/*": ["./{{defaults.baseDir}}/*", "./{{defaults.varDir}}/*"]
    }
  }
}
