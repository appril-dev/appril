{

  "extends": "@appril/configs/tsconfig.app.json",

  "include": [
    {{#if solidFramework}}
    "**/*.tsx",
    {{/if}}
    "**/*.ts"
  ],

  "exclude": [
    {{#each excludedSourceFolders}}
    {{this}}
    {{/each}}
  ],

  "compilerOptions": {
    "paths": {
      "{{defaults.appPrefix}}/*": ["./*"],
      "{{defaults.varPrefix}}/*": ["./{{defaults.varDir}}/*"]
    }
  }

}
