{

  {{#if solidFramework}}
  "extends": "@appril/configs/tsconfig.app.vite-solid.json",
  {{/if}}

  "include": [
    {{#if solidFramework}}
    "**/*.tsx",
    {{/if}}
    "../**/*.d.ts",
    "**/*.ts"
  ],

  "exclude": [
    {{#each excludedSourceFolders}}
    {{this}}
    {{/each}}
  ],

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [ "../*" ],
      "@/*": [ "./*"  ],
      {{#each aliases}}
      {{this}}
      {{/each}}
    }
  }
}
