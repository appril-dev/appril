{

  {{#if solidFramework}}
  "extends": "@appril/configs/tsconfig.app.vite-solid.json",
  {{/if}}

  "include": [
    {{#if solidFramework}}
    "**/*.tsx",
    {{/if}}
    "../**/*.d.ts",
    "**/*.ts"
  ],

  "exclude": [
    {{#each excludedSourceFolders}}
    {{this}}
    {{/each}}
  ],

  "compilerOptions": {
    "paths": {
      "{{defaults.appPrefix}}/*": ["../*"],
      "{{defaults.srcPrefix}}/*": ["./*"],
      "{{defaults.varPrefix}}/*": ["./{{defaults.varDir}}/*", "../{{defaults.varDir}}/*"]
    }
  }

}
