{
  "type": "module",
  "name": "@appril/dev",
  "version": "0.0.65",
  "description": "Appril Dev",
  "author": "Slee Woo",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "pkg/*"
  ],
  "exports": {
    ".": {
      "types": "./pkg/index.d.ts",
      "default": "./pkg/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "// ✨ linters": "",
    "lint": "biome lint",
    "// ✨ types": "",
    "tsc": "tsc",
    "// ✨ build": "",
    "prebuild:000": "rimraf pkg",
    "prebuild:001": "pnpm run lint",
    "prebuild:002": "pnpm run tsc",
    "prebuild": "set -e; for i in 0 1 2; do pnpm run prebuild:00${i}; done",
    "build": "../../esbuild.mjs index worker api-rules/worker"
  },
  "dependencies": {
    "@appril/configs": "workspace:^",
    "@appril/dev-utils": "workspace:^",
    "@phenomnomnominal/tsquery": "^6.1.3",
    "chokidar": "^4.0.1",
    "crc": "^4.3.2",
    "dotenv": "^16.4.5",
    "esbuild": "^0.24.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "lodash-es": "^4.17.21",
    "qs": "^6.13.0",
    "smol-toml": "^1.3.0",
    "ts-to-zod": "^3.13.0",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/koa": "^2.15.0",
    "@types/lodash-es": "^4.17.12",
    "@types/qs": "^6.9.17",
    "vite": "^5.4.11"
  },
  "peerDependencies": {
    "@appril/api": "workspace:^",
    "@appril/fetch": "workspace:^"
  }
}
