{
  "type": "module",
  "name": "@appril/dev",
  "version": "0.0.48",
  "description": "Appril Dev",
  "author": "Slee Woo",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": ["pkg/*"],
  "directories": {
    "bin": "pkg/bin"
  },
  "exports": {
    ".": {
      "default": "./pkg/index.mjs",
      "types": "./pkg/packages/dev/src/index.d.ts"
    }
  },
  "scripts": {
    "// ✨ linters": "",
    "lint": "biome lint ./src",
    "// ✨ types": "",
    "tsc": "tsc --emitDeclarationOnly",
    "// ✨ build": "",
    "prebuild:000": "rimraf pkg",
    "prebuild:001": "pnpm run lint",
    "prebuild:002": "pnpm run tsc",
    "prebuild": "set -e; for i in 0 1 2; do pnpm run prebuild:00${i}; done",
    "build": "node ../../esbuild.mjs index worker"
  },
  "dependencies": {
    "crc": "catalog:",
    "dotenv": "^16.4.5",
    "esbuild": "catalog:",
    "fast-glob": "catalog:",
    "fs-extra": "catalog:",
    "qs": "catalog:",
    "smol-toml": "catalog:",
    "ts-to-zod": "catalog:zod",
    "typescript": "catalog:"
  },
  "devDependencies": {
    "@appril/api": "workspace:^",
    "@appril/configs": "workspace:^",
    "@types/fs-extra": "catalog:",
    "@types/qs": "catalog:",
    "vite": "catalog:vite"
  },
  "peerDependencies": {
    "@appril/api": "workspace:^",
    "zod": "catalog:zod",
    "zod-validation-error": "catalog:zod"
  }
}
