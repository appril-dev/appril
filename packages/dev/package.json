{
  "type": "module",
  "name": "@appril/dev",
  "version": "0.0.49",
  "description": "Appril Dev",
  "author": "Slee Woo",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "pkg/*"
  ],
  "directories": {
    "bin": "pkg/bin"
  },
  "exports": {
    ".": {
      "types": "./pkg/index.d.ts",
      "default": "./pkg/index.mjs"
    }
  },
  "scripts": {
    "// ✨ linters": "",
    "lint": "biome lint ./src",
    "// ✨ types": "",
    "tsc": "tsc",
    "// ✨ build": "",
    "prebuild:000": "rimraf pkg",
    "prebuild:001": "pnpm run lint",
    "prebuild:002": "pnpm run tsc",
    "prebuild": "set -e; for i in 0 1 2; do pnpm run prebuild:00${i}; done",
    "build": "node ../../esbuild.mjs index worker api-assets/worker"
  },
  "dependencies": {
    "@appril/dev-utils": "workspace:^",
    "@phenomnomnominal/tsquery": "^6.1.3",
    "chokidar": "^3.6.0",
    "crc": "catalog:",
    "dotenv": "^16.4.5",
    "esbuild": "catalog:",
    "fast-glob": "catalog:",
    "fs-extra": "catalog:",
    "lodash-es": "catalog:",
    "qs": "catalog:",
    "smol-toml": "catalog:",
    "ts-to-zod": "catalog:zod",
    "typescript": "catalog:"
  },
  "devDependencies": {
    "@appril/api": "workspace:^",
    "@appril/configs": "workspace:^",
    "@types/fs-extra": "catalog:",
    "@types/lodash-es": "catalog:",
    "@types/node": "catalog:",
    "@types/qs": "catalog:",
    "vite": "catalog:vite"
  },
  "peerDependencies": {
    "@appril/api": "workspace:^",
    "typescript": "catalog:",
    "zod": "catalog:zod",
    "zod-validation-error": "catalog:zod"
  }
}
